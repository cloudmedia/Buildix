<?xml version='1.0' encoding='utf-8'?>
<widget id="net.buildix.app" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Buildix</name>
    <description>
        Building automation suite.
    </description>
    <author email="support@buildix.net" href="https://buildix.net">
        Cloudulus.Media
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="res/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="res/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="res/android/icon-96-xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/ios/Icon-App-20x20@1x.png" width="20" height="20" />
        <icon src="res/ios/Icon-App-20x20@2x.png" width="40" height="40" />
        <icon src="res/ios/Icon-App-20x20@3x.png" width="60" height="60" />
        <icon src="res/ios/Icon-App-29x29@1x.png" width="29" height="29" />
        <icon src="res/ios/Icon-App-29x29@2x.png" width="58" height="58" />
        <icon src="res/ios/Icon-App-29x29@3x.png" width="87" height="87" />
        <icon src="res/ios/Icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="res/ios/Icon-App-40x40@2x.png" width="80" height="80" />
        <icon src="res/ios/Icon-App-40x40@3x.png" width="120" height="120" />
        <icon src="res/ios/Icon-App-60x60@2x.png" width="120" height="120" />
        <icon src="res/ios/Icon-App-60x60@3x.png" width="180" height="180" />
        <icon src="res/ios/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="res/ios/Icon-App-76x76@2x.png" width="152" height="152" />
        <icon src="res/ios/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
        <icon src="res/ios/iTunesArtwork@1x" width="512" height="512" />
        <icon src="res/ios/ItunesArtwork@2x.png" width="1024" height="1024" />
    </platform>
    <engine name="android" spec="^7.1.4" />
    <engine name="windows" spec="~6.0.1" />
</widget>